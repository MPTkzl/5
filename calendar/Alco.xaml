<UserControl x:Class="calendar.Alco"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:calendar"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <RadioButton Margin="5" HorizontalAlignment="Center"/>
        <Image x:Name="ImageAlco" Grid.Column="1" Margin="5"/>
        <TextBlock x:Name="NameAlco" Grid.Column="2" Text="Название алкоголя" VerticalAlignment="Center" FontFamily="FZShuTi" FontSize="20" />
    </Grid>
</UserControl>
